{
  "$schema": "https://opencode.ai/config.json",
  "plugin": ["opencode-mem"],
  "mcp": {
    "notion": {
      "type": "local",
      "command": ["npx", "-y", "@notionhq/notion-mcp-server"],
      "environment": {
        "NOTION_TOKEN": "{env:NOTION_TOKEN}"
      },
      "enabled": false
    },
    "google-ai-search": {
      "type": "local",
      "command": [
        "node",
        "{env:HOME}/.opencode/plugins/opencode-google-ai-search/dist/index.js"
      ],
      "enabled": false
    },
    "posthog": {
      "type": "remote",
      "url": "https://mcp.eu.posthog.com/mcp",
      "headers": {
        "Authorization": "Bearer {env:POSTHOG_API_KEY}"
      },
      "enabled": false
    }
  }
}
